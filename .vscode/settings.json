{
  "editor.detectIndentation": false,
  "editor.tabSize": 2, // Same as .prettierrc tabWidth value
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": [
    "source.organizeImports", // Remove unused imports on save
    "source.fixAll.eslint" // Run eslint --fix on save
  ],
  // Add intellisense to twrnc classes used in the style prop
  "tailwindCSS.classAttributes": ["style"],
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)",
    ["tw.style\\(([^)]*)\\)", "'([^']*)'"]
  ]
}
